  .graph_container
      =content_tag :div, nil, :id=> "power_and_weather", :class=>"span12", :"data-seven-day-time"=>@last_seven_day_time, :"data-seven-day-data"=>@last_seven_day_data, :"data-temperature-data"=>@temperature_data, :"data-cloud-data"=>@cloud_cover_data
      #power_and_weather
  .graph_container
